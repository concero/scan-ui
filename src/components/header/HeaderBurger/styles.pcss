.header_burger {
	display: flex;
	flex-direction: column;
	position: fixed;
	top: var(--header-height);
	left: 0;
	width: 100vw;
	height: calc(100vh - var(--header-height));
	z-index: 3;
	overflow-y: auto;
	padding: var(--space-m);
	background-color: var(--color-gray-25);
	gap: var(--space-s);

	& .header_burger_divider {
		width: 100%;
		height: 1px;
		background-color: var(--color-gray-100);
	}
}
