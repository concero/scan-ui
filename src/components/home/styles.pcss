.home {
	display: flex;
	flex-direction: column;
	width: 100%;
	height: calc(100vh - var(--header-height));
	position: relative;

	& .home_blur {
		position: absolute;
		left: 0;
		bottom: 0;
		width: 100%;
		height: 20%;
		pointer-events: none;
		background: linear-gradient(180deg, rgba(252, 252, 253, 0) 0%, var(--color-gray-25, #fcfcfd) 78.7%);
	}
}
